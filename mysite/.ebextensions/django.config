option_settings:
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: "mysite.settings"
    PYTHONPATH: "/var/app/current:$PYTHONPATH"
    ENV: "production"
  aws:elasticbeanstalk:container:python:
    WSGIPath: "mysite.wsgi:application"

container_commands:
  01_create_db_dir:
    command: "mkdir -p /var/app/current/db && chown -R webapp:webapp /var/app/current/db && chmod 775 /var/app/current/db"
  02_migrate:
    command: "su webapp -c 'source /var/app/venv/*/bin/activate && cd /var/app/current && python manage.py migrate --noinput'"
    leader_only: true
  03_collectstatic:
    command: "su webapp -c 'source /var/app/venv/*/bin/activate && cd /var/app/current && python manage.py collectstatic --noinput'"
    leader_only: true